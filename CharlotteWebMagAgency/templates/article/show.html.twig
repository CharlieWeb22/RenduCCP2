{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
<body>
    <div class="container">
        <a class="btn btn-dark float-right mt-3"  href="{{ path('actualites_articles') }}">Retour à la liste</a>
    </div>
            <div class="container mb-5 mt-5">
                <div class="row">
                    <h1 class="col-lg-12 text-center text-uppercase my-3">{{ article.titre }}</h1>
                    <p class="col-lg-12 text-center text-uppercase my-3">{{ article.sousTitre }}</p>
                </div>     
                <div class="row">
                    <img src="{{ asset('img/') }}{{ article.featuredImage }}" alt="" class="card-img-top" alt="..."
                    style="width:100; height:250px; object-fit:cover;">
                </div>
                <div class="row ml-5 mr-5">
                    <p class="text-justify" style="font-size: 16px;">{{ article.contenu|raw }}</p>
                </div>
                <div class="card-body float-right">
                    <p class="card-text"><small>ajouté le : {{ article.createdAt ? article.createdAt|date('Y-m-d'): '' }}</small></p>
                </div>
            </div>
</body>
{% endblock %}