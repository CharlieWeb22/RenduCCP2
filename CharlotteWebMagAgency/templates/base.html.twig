            <img src="{{ asset('assets/images/logo-4.png') }}" alt="Logo" style="width:150px;">
          </a>

          <!-- Toggler/collapsibe Button -->
          <button class="navbar-toggler mr-3" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="btn-toggler-icon"></span>
            <span class="btn-toggler-icon"></span>
            <span class="btn-toggler-icon"></span>
          </button>

          <!-- Links -->
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto">

              <!-- Dropdown Nos prestations-->
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle mr-3" id="navbardrop" data-toggle="dropdown">
                  Nos prestations
                </a>
                <div class="dropdown-menu cost-drop">
                  <a class="dropdown-item" href="#">Agence Web</a>
                  <a class="dropdown-item" href="#">Création de site</a>
                  <a class="dropdown-item" href="#">Référencement</a>
                  <a class="dropdown-item" href="#">Webmastering & maintenance</a>
                  <a class="dropdown-item" href="#">Nos références</a>
                  <a class="dropdown-item" href="#">Votre digitalisation</a>
                  <a class="dropdown-item" href="#">Espace de Co-working</a>
                </div>
              </li>
              <!-- Dropdown Nos formations-->
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle mr-3" href="#" data-toggle="dropdown">
                  Nos formations
                </a>
                <div class="dropdown-menu cost-drop">
                  <a class="dropdown-item" href="#">Vous êtes un professionnel</a>
                  <a class="dropdown-item" href="#">Vous êtes un particulier</a>
                </div>
              </li>
              <!-- Dropdown recrutements-->
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle mr-3" data-toggle="dropdown">
                  Recrutements
                </a>
                <div class="dropdown-menu cost-drop">
                  <a class="dropdown-item" href="#">Consulter les offres</a>
                  <a class="dropdown-item" href="#">Candidature Spontanée</a>
                </div>
              </li>
              <!-- link Evenements -->
              <li class="nav-item">
                <a class="nav-link mr-3" href="#">Evènements</a>
              </li>
              <!-- Dropdown Avis-->
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle mr-3" data-toggle="dropdown">
                  Votre Avis
                </a>
                <div class="dropdown-menu cost-drop">
                  <a class="dropdown-item" href="{{ path('actualites_articles') }}">Le blog</a>
                  <a class="dropdown-item" href="#">Vos témoignages</a>
                </div>
              </li>
              <!-- Dropdown Avis-->
              <li class="nav-item">
                <a class="nav-link mr-5" href="#">Contacts</a>
              </li>
            </ul>
            <!-- BOUTON DE CONNECTION DANS LE MENU EN RESPONSIVE -->

            {% if is_granted('ROLE_REDAC') %}
            <a class="btn btn-danger ml-2 mb-2 justify-content-start connexion_button d-block d-sm-block d-md-block d-lg-none d-xl-none" href="{{ path('easyadmin') }}" type="submit"><strong>Administration</strong</a>
            {% endif %}
            {% if is_granted('ROLE_USER') %}
            <a class="btn btn-warning ml-2 mb-2 justify-content-start connexion_button d-block d-sm-block d-md-block d-lg-none d-xl-none" href="{{ path('app_logout') }}" type="submit">Déconnexion</a>
            {% else %}
            <a class="btn btn-info ml-2 mb-2 justify-content-start connexion_button d-block d-sm-block d-md-block d-lg-none d-xl-none" href="{{ path('app_login') }}" type="submit">Se Connecter</a>
            <a class="btn btn-secondary ml-2 mb-2 justify-content-start connexion_button d-block d-sm-block d-md-block d-lg-none d-xl-none" href="{{ path('app_register') }}" type="submit">S'inscrire</a>
            {% endif %}
  
           
          </div>

        </nav>
      </div>
    </div>
  </header>
  <!-- END HEADER -->

  <!-- LIENS CALL TO ACTION -->
  <section class="row">
    <div class="col-lg-6 text-center text-cust-call-to-action-1 px-0">
      <h2 href="#">Inscrivez-vous à nos formations thématiques</h2>
    </div>
    <div class="col-lg-6 text-center text-cust-call-to-action-2 px-0">
      <h2>L'agence recrute !</h2>
    </div>
  </section>
