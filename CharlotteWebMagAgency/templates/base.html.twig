        <!-- header -->
  <div class="row">
    <!-- header 1 Recherche et Connexion-->
    <div class="container-fluid col-lg-12 d-none d-lg-block" style="background-color: #333333;">
      <form class="form-inline my-2 my-lg-0 d-flex justify-content-end">
        <input class="form-control mr-sm-2 align-self-center input_search" type="search" placeholder=""
          aria-label="Search">
        <button class="btn btn-outline-info my-2 my-sm-0 align-self-center search_button"
          type="submit">Rechercher</button>
          {% if is_granted('ROLE_REDAC') %}
          <a class="btn btn-danger justify-content-end connexion_button my-1 ml-5 mr-1" href="{{ path('easyadmin') }}" type="submit"><strong>Administration</strong</a>
          {% endif %}
          {% if is_granted('ROLE_USER') %}
          <a class="btn btn-warning justify-content-end connexion_button my-1 ml-1 mr-1" href="{{ path('app_logout') }}" type="submit">Déconnexion</a>
          {% else %}
          <a class="btn btn-secondary justify-content-end connexion_button my-1 ml-1 mr-1" href="{{ path('app_login') }}" type="submit">Se Connecter</a>
          <a class="btn btn-info justify-content-end connexion_button my-1 ml-0 mr-1" href="{{ path('app_register') }}" type="submit">S'inscrire</a>
          {% endif %}

    
      </form>
    </div>

  </div>
  <header>

    <!-- UNE NAVBAR HORIZONTAL QUI DEVIENT VERTIVAL SUR PETIT ECRAN -->
